# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_APP_NAME=Xendit Deposit

# Deposit Amount Configuration
NEXT_PUBLIC_MIN_DEPOSIT_AMOUNT=10000
NEXT_PUBLIC_MAX_DEPOSIT_AMOUNT=100000000

# Decryption Configuration
# Base64 encoded private key (contains IV, HMAC hash, and encrypted RSA private key)
# This is used to decrypt the Authorization header from Android WebView
DECRYPT_PRIVATE_KEY_VABANK=
DECRYPT_PRIVATE_KEY_RETAIL=
DECRYPT_PRIVATE_KEY_QRIS=
DECRYPT_PRIVATE_KEY_EWALLET=

# Enable Auth Logging (for debugging Authorization header flow)
# Set to 'true' to enable logging in production
# Note: ENABLE_AUTH_LOGGING for server-side (middleware, API routes)
#       NEXT_PUBLIC_ENABLE_AUTH_LOGGING for client-side (browser console)
ENABLE_AUTH_LOGGING=false
NEXT_PUBLIC_ENABLE_AUTH_LOGGING=false

