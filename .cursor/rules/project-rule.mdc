### Middleware Implementation
```typescript
// middleware.ts
import { NextRequest, NextResponse } from 'next/server';
import { decrypt, extractIdAgen } from '@/lib/decrypt';

export function middleware(request: NextRequest) {
  // Skip non-payment method routes
  const paymentMethodRoutes = ['vabank', 'ewallet', 'qris', 'retail'];
  const pathSegments = request.nextUrl.pathname.split('/').filter(Boolean);
  const firstSegment = pathSegments[0];
  
  // Only process payment method base routes (e.g., /vabank)
  if (!paymentMethodRoutes.includes(firstSegment) || pathSegments.length > 1) {
    return NextResponse.next();
  }
  
  // Extract Authorization header
  const authHeader = request.headers.get('authorization') || 
                     request.headers.get('Authorization');
  
  if (!authHeader) {
    return NextResponse.redirect(new URL('/not-found', request.url));
  }
  
  // Parse header: ENC Key="...", Signature="..."
  const match = authHeader.match(/ENC Key="([^"]+)",\s*Signature="([^"]+)"/);
  if (!match) {
    return NextResponse.redirect(new URL('/not-found', request.url));
  }
  
  const key = match[1];
  const signature = match[2];
  const privateKey = process.env.DECRYPT_PRIVATE_KEY;
  
  if (!privateKey) {
    return NextResponse.redirect(new URL('/not-found', request.url));
  }
  
  // Decrypt and extract idagen
  const decryptedData = decrypt(signature, privateKey, key);
  if (!decryptedData) {
    return NextResponse.redirect(new URL('/not-found', request.url));
  }
  
  const idagen = extractIdAgen(decryptedData);
  if (!idagen) {
    return NextResponse.redirect(new URL('/not-found', request.url));
  }
  
  // Redirect to /[paymentMethod]/[idagen]
  return NextResponse.redirect(new URL(`/${firstSegment}/${idagen}`, request.url));
}
```

